<div class="section full mt-2 mb-2">
  <div class="wide-block pt-2 pb-2">
    <div class='row'>
      <div class="col-6 align-self-center">
        <div class="text-center">
          <% if @user.image %>
            <%= image_tag @user.image %>
           <% end %>
        </div>
      </div>
      <div class="col-6">
        <div>
          <%= @user.name %>
        </div>
        <div>
          <%= @user.email %>
        </div>
      </div>
      <div class="col-12">
        <%= form_for @user do |f| %>
          <label class="label" for="name1">性別</label>
          <%= f.select :gender, User.genders.keys.map {|k| [k, k]}, {}, { class:'form-control', id:'bt' } %>
          <label class="label" for="name1">年齢</label>
          <%= f.text_field :age, class:'form-control', id:'bt', placeholder:'35' %><br />
          <label class="label" for="name1">身長</label>
          <%= f.text_field :height, class:'form-control', id:'bt', placeholder:'170' %><br />
          <label class="label" for="name1">体重</label>
          <%= f.text_field :weight, class:'form-control', id:'bt', placeholder:'65' %><br />
          <%= f.submit '登録する', class:'btn btn-primary btn-lg btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
